
<section class="articles-main">
<%= form_with model: article || Article.new do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %><br>
        <% @article.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body, size: "40x10" %><br>
        <% @article.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <div >
        <%= form.submit 'Submit', class: 'btn' %>
        <% if @article.persisted?%>
            <%= render "delete", article: @article%>
        <% end %>
        <%= link_to "Cancel", articles_path, method: :get, class: 'btn ' %>
        
    </div>
<% end %>
</section>
